<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:text="일정 추가"
        android:textSize="30dp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        />


    <RelativeLayout
        android:layout_height="60dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <RadioGroup
            android:id="@+id/schedule_rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <RadioButton
                android:text="여행지 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_c1"
                android:checked="true"
                />
            <RadioButton
                android:text="음식점 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_c2"
                android:checked="true"
                />
            <RadioButton
                android:text="숙소 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_c3"
                android:checked="true"
                />
            <RadioButton
                android:text="공항 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/schedule_c4"
                android:checked="true"
                />

        </RadioGroup>
       </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/dateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜 선택"
            />
        <Button
            android:id="@+id/timeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간 선택"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/dateAndTime"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:gravity="center"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="장소 : "
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/editLocation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="장소를 입력하세요"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

            android:text="내용 : "
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/editContext"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:hint="내용을 입력하세요"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:gravity="center"
        >

        <Button
            android:id="@+id/schedule_cancleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 취소"
            />
        <Button
            android:id="@+id/schedule_addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 추가 "
            />


    </LinearLayout>






